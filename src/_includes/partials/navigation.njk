<header class="main-nav no-print">
  <div class="nav container">
    <a href="/index.html"><img class="main-nav__logo" src="{{'/assets/img/logo/jg-logo-48x48.png' | url}}" alt="Logo von Jens Grochtdreis"></a>
    <span class="main-nav__site-title"><a href="/index.html">CSS-Weblog</a></span>
    <button class="main-nav__toggle-button" popovertarget="mainnav">
      <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 80" width="16" height="16">
        <rect width="100" height="20" />
        <rect y="30" width="100" height="20"/>
        <rect y="60" width="100" height="20"/>
      </svg>
  Menü</button>
    
    <nav id="mainnav" class="main-nav__content" popover>
      <button class="main-nav__close-button" popovertarget="mainnav" popovertargetaction='hide'>Menü schließen</button>
      <ul class="main-nav__nav">
        {%- for entry in mainnavigation %}
          <li  class="main-nav__item">
            <a  class="main-nav__link{% if entry.class == bodyClass %} main-nav__link--active{% endif %}" href="{{ entry.url | url }}">{{ entry.title }}  </a>
          </li>
        {%- endfor %}
        </ul>
    </nav>
    
  </div>
</header>
