---
layout: layouts/base.njk
templateClass: tmpl-post
---
<div class="container">
  <main class="post-cnt">
    {{ content | safe }}
    {% include "partials/source.njk" %}
  </main>
    <div class="tags">
      <ul class="taglist taglist--short">
        {%- for tag in tags -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <li class="taglist__item">
          <a class="taglist__link" href="{{ tagUrl | url }}">
            {{ tag }}
          </a>
        </li>
        {%- endfor -%}
      </ul>
    </div>
</div>



