---
layout: layouts/home.njk

permalink: /index.html
bodyClass: index
eleventyNavigation:
  key: home
  order: 1

title: "CSS-Weblog"
subline: "CSS und mehr"
headerImage: "875x250-myred.png"
---

{%- for item in categories %}
    <h2>{{ item.title }}</h2>
    {% if "article" in item.cat %}
      {% for post in collections.article %}
        {% if loop.first %}<ul class="index-list">{% endif %}
          {% include "partials/link-list-item.njk" %}
        {% if loop.last %}</ul>{% endif %}
      {% endfor %}
    {% endif %}


    {% if "til" in item.cat %}
      {% for post in collections.til %}
          {% set tagUrl %}/{{ tag }}/{% endset %}
        {% if loop.first %}<ul class="index-list">{% endif %}
          <li>
            <a href="{{ post.url }}">{{ post.data.title }}</a>

          </li>
        {% if loop.last %}</ul>{% endif %}
      {% endfor %}
    {% endif %}

    {% if "linktipps" in item.cat %}
      {% for post in collections.linktipps %}
        {% if loop.first %}<ul class="index-list">{% endif %}
          {% include "partials/link-list-item.njk" %}
        {% if loop.last %}</ul>{% endif %}
      {% endfor %}
    {% endif %}

{% endfor -%}
